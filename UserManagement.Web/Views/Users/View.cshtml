@model UserManagement.Shared.Models.Users.UserViewModel

<h2>User @Model.FullName</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Id:</strong> @Model.Id</p>
        <p><strong>Forename:</strong> @Model.Forename</p>
        <p><strong>Surname:</strong> @Model.Surname</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Date of Birth:</strong> @Model.DateOfBirth?.ToString("d")</p>
        <p><strong>Is Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>
    </div>
</div>

<div class="mt-3">
    <div class="d-grid gap-2 d-md-flex">
        <a asp-controller="Users" asp-action="Update" asp-route-userId="@Model.Id" class="btn btn-primary">
            Edit User
        </a>

        <a asp-controller="Users" asp-action="Delete" asp-route-userId="@Model.Id" class="btn btn-danger">
            Delete User
        </a>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-end">
        <a asp-controller="Users" asp-action="List" class="btn btn-secondary">
            Back to List
        </a>
    </div>
</div>

<h3>Audit Logs</h3>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Action</th>
            <th>Timestamp</th>
            <th>Details</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var log in Model.Logs)
        {
            <tr>
                <td>@log.Id</td>
                <td>@log.Action</td>
                <td>@log.Timestamp</td>
                <td>@log.Details</td>
            </tr>
        }
        </tbody>
    </table>
</div>
