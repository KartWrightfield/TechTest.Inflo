@model UserManagement.Shared.Models.Users.UserViewModel

<h2>Confirm Delete</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this user?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-body">
        <p><strong>Id:</strong> @Model.Id</p>
        <p><strong>Name:</strong> @Model.Forename @Model.Surname</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Date of Birth:</strong> @Model.DateOfBirth</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="userId" value="@Model.Id" />
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>
